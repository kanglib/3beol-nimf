<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
  <schema id="org.nimf.engines.nimf-libhangul"
          path="/org/nimf/engines/nimf-libhangul/" gettext-domain="nimf">
    <key type="s" name="hidden-schema-name">
      <default l10n="messages">'Korean (libhangul)'</default>
      <summary>schema name for nimf-settings</summary>
      <description>This key is intended for nimf-settings.</description>
    </key>
    <key type="b" name="active">
      <default>true</default>
      <summary>Active engine</summary>
      <description>The engine will be loaded on startup if available. Restart required</description>
    </key>
    <key type="s" name="layout">
      <default>'2'</default>
      <summary>Korean keyboard layout</summary>
      <description>Korean keyboard layout</description>
    </key>
    <key type="as" name="trigger-keys">
      <default>['Hangul']</default>
      <summary>Trigger keys for switching Korean / System</summary>
      <description>Binding to change Korean / System</description>
    </key>
    <key type="as" name="hanja-keys">
      <default>['Hangul_Hanja']</default>
      <summary>Hotkey for Hanja</summary>
      <description>Binding to Hanja key</description>
    </key>
    <key type="b" name="double-consonant-rule">
      <default>false</default>
      <summary>Use a rule composing double consonants</summary>
      <description>compose a double consonant on pressing same consonant twice</description>
    </key>
    <key type="b" name="auto-reordering">
      <default>false</default>
      <summary>Auto-reordering in Dubeolsik</summary>
      <description>Auto-reordering in Dubeolsik</description>
    </key>
    <key type="b" name="ignore-reset-in-commit-cb">
      <default>true</default>
      <summary>Ignore reset() in commit callback</summary>
      <description>Ignore reset() called by commit callback in application</description>
    </key>
    <key type="s" name="xkb-option">
      <choices>
        <choice value='not-assigned'      /> <!-- Not assigned -->
        <choice value='korean-hw-keys'    /> <!-- Hardware Hangul/Hanja keys -->
        <choice value='korean-ralt-rctrl' /> <!-- Right Alt as Hangul, right Ctrl as Hanja -->
        <choice value='korean-rctrl-ralt' /> <!-- Right Ctrl as Hangul, right Alt as Hanja -->
      </choices>
      <default>'not-assigned'</default>
      <summary>Korean Hangul/Hanja XKB Option</summary>
      <description>Korean Hangul/Hanja keys</description>
    </key>
    <key type="s" name="hidden-xkb-option-not-assigned">
      <default l10n="messages">'Not assigned'</default>
      <summary>key value for UI l10n</summary>
      <description>This key is intended for nimf-settings.</description>
    </key>
    <key type="s" name="hidden-xkb-option-korean-hw-keys">
      <default l10n="messages">'Hardware Hangul/Hanja keys'</default>
      <summary>key value for UI l10n</summary>
      <description>This key is intended for nimf-settings.</description>
    </key>
    <key type="s" name="hidden-xkb-option-korean-ralt-rctrl">
      <default l10n="messages">'Right Alt as Hangul, right Ctrl as Hanja'</default>
      <summary>key value for UI l10n</summary>
      <description>This key is intended for nimf-settings.</description>
    </key>
    <key type="s" name="hidden-xkb-option-korean-rctrl-ralt">
      <default l10n="messages">'Right Ctrl as Hangul, right Alt as Hanja'</default>
      <summary>key value for UI l10n</summary>
      <description>This key is intended for nimf-settings.</description>
    </key>
  </schema>
</schemalist>
